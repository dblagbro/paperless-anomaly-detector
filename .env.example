# Paperless API Configuration
PAPERLESS_API_BASE_URL=http://paperless-web:8000
PAPERLESS_API_TOKEN=your_paperless_api_token_here

# Optional LLM Configuration
# LLM_PROVIDER=anthropic  # or 'openai' or leave empty to disable
# LLM_API_KEY=your_llm_api_key_here
# LLM_MODEL=claude-3-5-sonnet-20241022

# Polling Configuration
POLLING_INTERVAL=300  # seconds (5 minutes)
BATCH_SIZE=10

# Database Configuration
DATABASE_URL=sqlite:///data/anomaly_detector.db
# DATABASE_URL=postgresql://user:pass@postgres:5432/anomaly_db

# Detection Thresholds
BALANCE_TOLERANCE=0.01
LAYOUT_VARIANCE_THRESHOLD=0.3

# Web UI Configuration
WEB_HOST=0.0.0.0
WEB_PORT=8050

# Logging
LOG_LEVEL=INFO
